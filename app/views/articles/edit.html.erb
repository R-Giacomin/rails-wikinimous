<h1>Edit a Article</h1>

<%= form_for(@article) do |f| %>

  <div class="field">
    <%= f.label :title %> <br />
    <%= f.text_area :title %> <br />
  </div>
  <div class="field">
    <%= f.label :content %> <br />
    <%= f.text_area :content %> <br />
  </div>
   <div class="actions button small radius">
  <%= f.submit%>
  </div>
<% end %>
